{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "QuickKeys",
  "version": "0.1.0",
  "identifier": "com.quickkeys.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "QuickKeys",
        "maxWidth": 1000,
        "maxHeight": 900,
        "minWidth": 900,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "maximizable": false,
        "minimizable": true,
        "center": true,
        "shadow": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ]
  }
}
